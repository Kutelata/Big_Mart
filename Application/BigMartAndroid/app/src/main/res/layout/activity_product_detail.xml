<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/rlProductInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvProductInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Thông tin sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <GridLayout
            android:id="@+id/glProductInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductInfo"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="14"
            android:useDefaultMargins="true">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Mã sản phẩm :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductId"
                android:layout_row="0"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="Tên sản phẩm :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_row="1"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Ảnh :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:text="Tên loại :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductCategory"
                android:layout_row="3"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:text="Nhà cung cấp :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductProvider"
                android:layout_row="4"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="6"
                android:layout_column="0"
                android:text="Giá :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_row="6"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="7"
                android:layout_column="0"
                android:text="Số lượng :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_row="7"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="8"
                android:layout_column="0"
                android:text="Điểm thưởng :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductPoint"
                android:layout_row="8"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="11"
                android:layout_column="0"
                android:text="Mô tả :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_row="11"
                android:layout_column="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />
        </GridLayout>

        <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/glProductInfo"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:hint="Nhập số lượng"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtQuantity"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            android:text="Thêm sản phẩm vào giỏ hàng"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>