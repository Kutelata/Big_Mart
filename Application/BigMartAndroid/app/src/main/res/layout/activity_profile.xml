<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rlCustomerInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCustomerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Thông tin khách hàng"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <GridLayout
            android:id="@+id/glCustomerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCustomerInfo"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="10"
            android:useDefaultMargins="true">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Mã khách hàng :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerId"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Mã khách hàng :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="Tên khách hàng :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Tên khách hàng :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:text="Giới tính :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerGender"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Giới tính :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:text="Ngày sinh :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerBirthday"
                android:layout_row="3"
                android:layout_column="1"
                android:text="Ngày sinh :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:text="Số điện thoại :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerPhone"
                android:layout_row="4"
                android:layout_column="1"
                android:text="Số điện thoại :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="5"
                android:layout_column="0"
                android:text="Địa chỉ nhà :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerAddress"
                android:layout_row="5"
                android:layout_column="1"
                android:text="Địa chỉ nhà :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="6"
                android:layout_column="0"
                android:text="Địa chỉ email :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerEmail"
                android:layout_row="6"
                android:layout_column="1"
                android:text="Địa chỉ email :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_row="7"
                android:layout_column="0"
                android:text="Điểm tích lũy :"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCustomerPoint"
                android:layout_row="7"
                android:layout_column="1"
                android:text="Điểm tích lũy :"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </GridLayout>

        <Button
            android:id="@+id/btnHistoryInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glCustomerInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="Lịch sử đơn hàng"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>